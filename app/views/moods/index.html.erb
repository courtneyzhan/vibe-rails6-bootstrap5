
<div>
  <div style="float: right;">
  <%= link_to 'New Mood', new_mood_path, :class => "btn btn-success", :id => "new-mood-btn" %>
  </div>
  <h1 class="text-secondary"><% if current_user %>My <% end %>Moods</h1>
</div>

<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th scope="col">Mood</th>
      <th scope="col">Date</th>
      <th scope="col" colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @moods.each do |mood| %>
      <tr>
        <td><%= mood.mood %></td>
        <td><%= mood.date %></td>
<!--        <td><%#= link_to 'Show', mood %></td>-->
<!--        <td><%#= link_to 'Edit', edit_mood_path(mood) %></td>-->
        <td><a href="<%= edit_mood_path(mood) %>" class="btn btn-light"><i class="fa fa-edit"></i></a>

          &nbsp;
          <a data-confirm="Are you sure?" class="btn" rel="nofollow" data-method="delete" href="<%= mood_path(mood) %>"><i class="fa fa-trash" style="color:red"></i></a></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

